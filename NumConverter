public class NumberConverter {
    public String convertToDecimal(String number, int fromBase) {
        if (fromBase == 10) return number;
        String cleanNumber = number.replaceAll("^0[xXbB]", "");
        return String.valueOf(Long.parseLong(cleanNumber, fromBase));
    }

    public String convertFromDecimal(double number, int toBase) {
        long integerPart = (long) number;
        String result = switch (toBase) {
            case 2 -> "0b" + Long.toBinaryString(integerPart);
            case 8 -> "0" + Long.toOctalString(integerPart);
            case 16 -> "0x" + Long.toHexString(integerPart);
            default -> String.valueOf(number);
        };
        if (number % 1 != 0) {
            result += String.format(".%02f", number - integerPart).substring(1);
        }
        return result;
    }
}
