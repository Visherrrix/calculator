import java.util.Scanner;

public class Calculator {

    Scanner scanner = new Scanner(System.in);
    private int currentBase = 10;
    private final NumConverter converter = new NumConverter();

    public void run() {
        while (true) {
            System.out.println("\n1. Сменить СС\n2. Вычисления\n3. Выход");
            String choice = scanner.nextLine();
            if (choice.equals("3")) break;
        }
    }

    private void performCalculation() {
        System.out.print("Введите первое число: ");
        double num1 = Double.parseDouble(scanner.nextLine());
        
        System.out.print("Введите оператор (+, -, *, /): ");
        String operator = scanner.nextLine();
        
        System.out.print("Введите второе число: ");
        double num2 = Double.parseDouble(scanner.nextLine());
        
        double result = switch (operator) {
            case "+" -> num1 + num2;
            case "-" -> num1 - num2;
            case "*" -> num1 * num2;
            case "/" -> num1 / num2;
            default -> throw new IllegalArgumentException("Неверный оператор");
        };
        System.out.println("Результат: " + result);
    }
    
    private void changeNumberBase() {
        System.out.print("Выберите СС (2/8/10/16): ");
        int base = Integer.parseInt(scanner.nextLine());
        if (base == 2 || base == 8 || base == 10 || base == 16) {
            currentBase = base;
        }
    }
    
    private void safePerformCalculation() {
        try {
            performCalculation();
        } catch (NumberFormatException e) {
            System.out.println("Ошибка: неверный формат числа");
        } catch (ArithmeticException e) {
            System.out.println("Ошибка: " + e.getMessage());
        }
    }

}
